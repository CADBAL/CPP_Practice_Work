{
    "version": "2.0.0",
    "configurations": [

        {
            // Below is for when you want to debug a a project within a folder using a makefile
            "name": "Debug (make, output = active filename)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "cwd": "${fileDirname}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": false,
            "stopAtEntry": true,
            "preLaunchTask": "make build (current folder)"
        },
        {
            // Below is for when you want to debug only a single file which doesn't utilize a makefile
            "name": "Debug (single file build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // For Windows: add ".exe" and use backslashes like "\\"
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // For Windows: use "C:\\msys64\\ucrt64\\bin\\gdb.exe" instead of "/usr/bin/gdb"
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file (WSL)"
        }, 
        {    // Below is for when you want to 'make clean' in the current folder
            "name": "Clean only (make clean)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/true",
            "cwd": "${fileDirname}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": true,
            "stopAtEntry": true,
            "preLaunchTask": "make clean (current folder)"
        }
    ],
}
